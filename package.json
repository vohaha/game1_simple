{
  "name": "game1-core-domain",
  "version": "0.1.0",
  "description": "Core domain models and services for Game1, a DDD simulation framework.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=esnext --outdir=dist --sourcemap",
    "dev": "esbuild ./src/index.ts ./src/sandbox_server.ts --bundle --platform=node --target=esnext --outdir=dist --sourcemap --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "sandbox": "ts-node-dev --respawn ./dist/sandbox_server.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "domain-driven-design",
    "simulation",
    "game1",
    "cognitive-science",
    "psychology",
    "esbuild"
  ],
  "author": "Game1 Team",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "esbuild": "^0.19.12",
    "eslint": "^8.57.1",
    "jest": "^30.0.2",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "zod": "^3.25.67"
  }
}
