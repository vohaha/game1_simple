<ul class="divide-y divide-gray-200">
  <% if (!events || events.length === 0) { %>
    <li class="text-gray-400 italic py-4">No activity yet.</li>
  <% } else { %>
    <% events.forEach(function(evt) { %>
      <li class="py-3 px-2">
        <div class="flex items-center justify-between">
          <span class="font-semibold text-blue-700 mr-1"><%= evt.event %></span>
          <% if (evt.timestamp) { %>
            <span class="text-xs text-gray-400 ml-2"><%= evt.timestamp %></span>
          <% } %>
        </div>
        <div class="text-sm text-gray-700 mt-1 whitespace-pre-line">
          <% if (evt.payload) { %>
            <%= JSON.stringify(evt.payload, null, 2) %>
          <% } else { %>
            <span class="italic text-gray-400">No details</span>
          <% } %>
        </div>
      </li>
    <% }); %>
  <% } %>
</ul>
